# This is Git's per-user configuration file.
[core]
# Please adapt and uncomment the following lines:
  user = Gal Schlezinger
  email = galstar@spitfire.co.il
  editor = nvim
  excludesfile = ~/.gitignore
[user]
  name = Gal Schlezinger
  email = gal@spitfire.co.il
[alias]
  ac = add . && commit
  co = checkout
  ffm = merge --ff-only
  poh = push --set-upstream origin head
  puh = push upstream head
  dc = diff --cached
  bdbd = !git branch --merged | egrep -v \"(^\\*|master|dev)\" | xargs git branch -d
  pick = !git log -300 --oneline --color | fzf -m --ansi --preview 'git show --color {1}' | awk '{print $1}'
  sw = !gh branch
  c = commit -m
  conflicted = diff --name-only --diff-filter=U
  web = !gh repo view --web
  fo = fetch -p origin
  fu = fetch -p upstream
  pff = pull --ff-only
  pr = !gh pr create -a Schniz
  bpr = !gh pr view --web
  cis = !gh pr checks
  pco = !gh pr checkout
  pr-bug = !hub pull-request -a Schniz -l bug
  issue = !hub issue create
  mr = !lab merge-request
[help]
  autocorrect = 10
[gpg]
  program = /usr/local/bin/gpg
[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
[push]
  default = current
[commit]
  gpgsign = true
[protocol]
	version = 2
[init]
	defaultBranch = main
[include]
  path = ~/.gitconfig.local
