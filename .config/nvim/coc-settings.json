{
  "codeLens.enable": true,
  "coc.preferences.formatOnSave": true,
  "Lua.format.enable": false,
  "solargraph.bundlerPath": "~/.rbenv/shims/bundle",
  "tsserver.useLocalTsdk": true,
  "solargraph.useBundler": true,
  "coc.source.emoji.filetypes": [
    "markdown",
    "markdown.mdx",
    "markdown.ghpull",
    "eruby"
  ],
  "rust-analyzer.lens.enable": false,
  "javascript.suggestionActions.enabled": false,
  "tailwindCSS.emmetCompletions": true,
  "tailwindCSS.trace.server": "verbose",
  "tailwindCSS.headwind.runOnSave": false,
  "rust-analyzer.procMacro.enable": true,
  "rust-analyzer.cargo.runBuildScripts": true,
  "json.format.enable": false,
  "diagnostic.virtualText": true,
  "diagnostic.virtualTextCurrentLineOnly": false,
  "languageserver": {
    "terraform": {
      "command": "terraform-ls",
      "args": ["serve"],
      "filetypes": ["terraform", "tf"],
      "initializationOptions": {},
      "settings": {}
    },
    "reason": {
      "command": "ocamllsp",
      "filetypes": ["reason", "ocaml"]
    }
  },
  "deno.enable": false,

  // Inlay Hints for JS/TS
  "typescript.inlayHints.variableTypes.enabled": true,
  "javascript.inlayHints.variableTypes.enabled": true,
  "typescript.inlayHints.functionLikeReturnTypes.enabled": true,
  "javascript.inlayHints.functionLikeReturnTypes.enabled": true,

  "workspace.openResourceCommand": "badd",

  "json.schemas": [
    {
      "fileMatch": ["tsconfig.json"],
      "url": "https://raw.githubusercontent.com/SchemaStore/schemastore/master/src/schemas/json/tsconfig.json"
    }
  ],
  "go.goplsOptions": {
    "staticcheck": true
  }
}
