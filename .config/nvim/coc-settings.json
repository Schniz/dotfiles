{
  "graphql.filetypes": [
    "graphql"
    /* "javascript", */
    /* "javascriptreact", */
    /* "typescript", */
    /* "typescriptreact", */
    /* "reason" */
  ],
  "codeLens.enable": true,
  "prettier.eslintIntegration": true,
  /* "tslint.autoFixOnSave": true, */
  /* "eslint.autoFixOnSave": true, */
  "coc.preferences.formatOnSaveFiletypes": ["rust", "markdown", "typescript", "typescriptreact", "javascript", "javascriptreact", "javascript.jsx"],
  "solargraph.useBundler": true,
  "coc.source.emoji.filetypes": [
    "markdown",
    "markdown.mdx",
    "markdown.ghpull",
    "eruby"
  ],
  "javascript.suggestionActions.enabled": false,
  // "coc.preferences.customSources": ["word","include"],
  "tailwindCSS.emmetCompletions": true,
  "tailwindCSS.jsLanguages": [
    "javascript",
    "javascriptreact",
    "reason",
    "typescriptreact",
    "typescript.jsx",
    "javascript.jsx"
  ],

  "languageserver": {
    "elixir": {
      "command": "/Users/galsc/Code/forks/elixir-ls/rel/language_server.sh",
      "filetypes": ["elixir"]
    },
    "swift": {
      "command": "sourcekit-lsp",
      "filetypes": ["swift"]
    },
    /* "solargraph": { */
    /*   "command": "solargraph", */
    /*   "filetypes": ["ruby"] */
    /* }, */
    "crystal": {
      "filetypes": ["crystal"],
      "command": "scry"
    },
    /* "rust": { */
    /*   "filetypes": ["rust"], */
    /*   /1* "command": "rls" *1/ */
    /*   "command": "rust-analyzer" */
    /* }, */
    "reason": {
      "command": "reason-language-server",
      /* "command": "ocaml-language-server", */
      "args": ["--stdio"],
      "filetypes": ["reason"]
    },
    "go": {
      "command": "go-langserver",
      "filetypes": ["go"],
      "initializationOptions": {
        "funcSnippetEnabled": true,
        "gocodeCompletionEnabled": true
      }
    }
  }
}
